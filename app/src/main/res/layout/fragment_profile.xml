<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fraguments.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <LinearLayout
                                    android:weightSum="10"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:layout_weight="3"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:src="@drawable/money"
                                            android:layout_margin="15dp"/>

                                        <LinearLayout
                                            android:layout_weight="5"
                                            android:orientation="vertical"
                                            android:layout_width="215dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="35dp">

                                                <TextView
                                                    android:id="@+id/username"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:textSize="18sp"
                                                    android:text="Suvindran B"/>

                                                <TextView
                                                    android:id="@+id/email_id"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Suvindran10@gmail.com"/>

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="9659005160"/>

                                        </LinearLayout>

                                        <ImageButton
                                            android:id="@+id/edit"
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/edit"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#DCDCDC"/>

                                <LinearLayout
                                    android:padding="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                        <TextView
                                            android:text="Trichy"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8sp"
                                            android:drawableLeft="@drawable/location"
                                            android:textSize="18sp"
                                            android:drawablePadding="30sp"
                                            android:paddingLeft="50sp"/>

                                        <TextView
                                            android:text="My Loans"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/expense"
                                            android:layout_margin="8sp"
                                            android:drawablePadding="30sp"
                                            android:textSize="18sp"
                                            android:paddingLeft="50sp"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#DCDCDC"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp"
                                    android:text="More"/>

                        </LinearLayout>

                </android.support.v7.widget.CardView>

        </LinearLayout>

</FrameLayout>